<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= link_to player.name, player %></td>
        <td>
          <nav class="nav">
            <%= link_to 'Edit', edit_player_path(player), class: "nav-link py-0" %>
            <%= link_to 'Destroy', player, class: "nav-link py-0", method: :delete, data: { confirm: 'Are you sure?' } %>
          </nav>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Player', new_player_path %>
