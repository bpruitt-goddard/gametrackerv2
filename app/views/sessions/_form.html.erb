<%= form_with(model: session, local: true) do |form| %>
  <% if session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(session.errors.count, "error") %> prohibited this session from being saved:</h2>

      <ul>
      <% session.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 
    <h3>Players:</h3>

    <table>
      <thead>
        <tr>
          <th>Player</th>
          <th>Score</th>
          <th>Placing</th>
          <th>Team</th>
          <th colspan="3">Action</th>
        </tr>
      </thead>
      <tbody id='players'>
        <%= form.fields_for :session_players do |session_player| %>
          <%= render 'session_player_fields', :form => session_player %>
        <% end %>
      </tbody>
    </table>
 
  <div class='links'>
    <%= link_to_add_association 'add player', form, :session_players %>
  </div>

  <div class="field">
    <%= form.label :notes %>
    <%= form.text_field :notes %>
  </div>

  <div class="field">
    <%= form.label :game_id %>
    <%= form.text_field :game_id %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<script>
  //Add a player by default
  $(document).ready(function() { $(".add_fields").click() } );
</script>