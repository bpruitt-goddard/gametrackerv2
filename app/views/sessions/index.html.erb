<p id="notice"><%= notice %></p>

<h1>Recent Sessions</h1>

<table>
  <thead>
    <tr>
      <th>Played</th>
      <th>Notes</th>
      <th>Game</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= session.played %></td>
        <td><%= truncate(session.notes, :length => 30) %></td>
        <td><%= session.game.name %></td>
        <td>
          <%= link_to 'Show', session %>
          <%= link_to 'Edit', edit_session_path(session) %>
          <%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Session', new_session_path %>
